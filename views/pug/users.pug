extends layout

block content
  section(aria-label="Користувачі" class="users")
    if !isHome
      h1.users__title Користувачі
    ul.users__list
      each u in users
        li.users__item
          article.users__card
            h2.users__name= u.name
            p.users__meta ID: #{u.id} · Роль: #{u.role} · Місто: #{u.city}
            if u.skills && u.skills.length
              p.users__email Навички:
              ul.users__skills
                each s in u.skills
                  li.users__skill= s
            p.users__email Email: #{u.email}
            a.users__link(href=`/users/${u.id}`) Деталі користувача →

  section(aria-label="Приклади карток" class="demo-cards")
    h2.users__title Додаткові приклади
    ul.users__list
      each n in [1,2,3,4,5,6]
        li.users__item
          article.users__card
            h3.users__name Демокартка №#{n}
            p.users__meta Текст для демонстрації вмісту картки. Все українською.
            a.users__link(href="/users") Повернутись до списку
