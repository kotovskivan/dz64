<% layout('layout') %>
<section aria-label="Деталі статті" class="article-detail">
  <h1 class="article-detail__title">Деталі статті</h1>
  <article class="article-detail__card">
    <h2 class="article-detail__name"><%= article.title %></h2>
    <p class="article-detail__meta">ID: <%= article.id %> · Автор: <%= article.author %></p>
    <p class="article-detail__body"><%= article.body %></p>
  </article>
  <a class="article-detail__back" href="/articles">← Повернутися до списку</a>
</section>
