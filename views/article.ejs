<!DOCTYPE html>
<html lang="uk">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title || 'Стаття' %></title>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="icon" href="/favicon.ico">
  <link rel="stylesheet" href="/public/css/desktop.css">
  <link rel="stylesheet" href="/public/css/mobile.css" media="(max-width: 767px)">
  <% if (theme === "dark") { %>
  <link rel="stylesheet" href="/public/css/dark.css">
  <% } %>
</head>
<body class="ui">
<header class="classy-header">
  <div class="classy-header__inner">
    <a class="classy-header__brand" href="/"><img src="/public/img/logo.svg" alt="UA‑Motors" width="120" height="28"></a>
    <nav class="classy-header__nav">
      <div class="header-tools">
        <span class="badge">Тема: <%= theme %></span>
        <a class="header-link" href="/theme/light">Світла</a>
        <a class="header-link" href="/theme/dark">Темна</a>
        <% if (isAuth) { %>
          <span class="badge is-ok">JWT: увійшли</span>
          <a class="header-link" href="/profile">Профіль</a>
          <a class="header-link" href="/logout">Вийти</a>
        <% } else { %>
          <span class="badge is-warn">JWT: гість</span>
        <% } %>
      </div>
      <a class="classy-header__link" href="/users">Користувачі (PUG)</a>
      <a class="classy-header__link is-active" href="/articles">Статті (EJS)</a>
    </nav>
  </div>
</header>
<main class="container">
  <article class="article">
    <div class="article__cover"><img src="<%= article.cover %>" alt="<%= article.title %>" width="960" height="420"></div>
    <h1 class="h1"><%= article.title %></h1>
    <p class="article__meta"><%= article.date %> · <a href="/users/<%= author.id %>"><%= author.name %></a></p>
    <div class="article__content">
      <% article.content.forEach(function(p){ %><p><%= p %></p><% }) %>
    </div>
    <div class="tags">
      <% article.tags.forEach(function(t){ %><span class="tag"><%= t %></span><% }) %>
    </div>
  </article>
  <section class="related">
    <h2 class="h2">Схожі статті</h2>
    <ul class="cards grid">
      <% related.forEach(function(a){ var au=users.find(u=>u.id===a.authorId); %>
        <li class="card">
          <a class="card__media" href="/articles/<%= a.slug %>">
            <img src="<%= a.cover %>" alt="<%= a.title %>" width="320" height="180">
          </a>
          <div class="card__body">
            <h3 class="card__title"><a href="/articles/<%= a.slug %>"><%= a.title %></a></h3>
            <p class="card__meta"><%= a.date %> · <a href="/users/<%= au.id %>"><%= au.name %></a></p>
          </div>
        </li>
      <% }) %>
    </ul>
  </section>
</main>
<footer class="footer"><p class="footer__p">© <%= new Date().getFullYear() %> UA‑Motors</p></footer>
</body>
</html>
